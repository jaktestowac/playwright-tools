{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "stripInternal": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
