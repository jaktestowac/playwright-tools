{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "removeComments": false,
    "stripInternal": false,
    "preserveSymlinks": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "tests/**/*", "node_modules/**/*"]
}
